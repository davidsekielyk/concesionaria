<Page xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:bottomBar="nativescript-bottom-navigation"
        navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="My App" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto,*,auto">
        <StackLayout row="0" class="p-20">
            <Label text="jkdlsjaldksaj" class="h1 text-center"/>
            <Button text="TAP" tap="{{ onTap }}" class="btn btn-primary btn-active"/>
            <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>
        </StackLayout>
        <StackLayout row="1" >
            <Label class="progressBar" text="dsadsa"/>
        </StackLayout>
        <bottomBar:BottomNavigation row="2">
            <bottomBar:BottomNavigationTab title="First" icon="ic_home"></bottomBar:BottomNavigationTab>
            <bottomBar:BottomNavigationTab title="Second" icon="ic_view_list" tap="go_second"></bottomBar:BottomNavigationTab>
            <bottomBar:BottomNavigationTab title="Third" icon="ic_menu"></bottomBar:BottomNavigationTab>
        </bottomBar:BottomNavigation>
    </GridLayout> 

</Page>
